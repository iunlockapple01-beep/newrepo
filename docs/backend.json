
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name"
        },
        "email": {
          "type": "string",
          "description": "The user's email address"
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture"
        },
        "lastLogin": {
          "type": "string",
          "format": "date-time",
          "description": "The last time the user logged in"
        },
        "balance": {
          "type": "number",
          "description": "The user's account balance"
        }
      },
      "required": ["displayName", "email"]
    },
    "submission": {
      "title": "Submission",
      "description": "An IMEI submission for checking",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who made the submission"
        },
        "model": {
          "type": "string",
          "description": "The device model"
        },
        "price": {
          "type": "number",
          "description": "The price for the unlock service"
        },
        "image": {
          "type": "string",
          "description": "URL of the device image"
        },
        "imei": {
          "type": "string",
          "description": "The IMEI or serial number of the device"
        },
        "status": {
          "type": "string",
          "enum": ["waiting", "feedback", "paid", "eligible", "not_supported"],
          "description": "The current status of the submission"
        },
        "feedback": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Feedback provided by the admin"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "model", "price", "imei", "status", "createdAt"]
    },
    "order": {
      "title": "Order",
      "description": "A confirmed and paid unlock order",
      "type": "object",
      "properties": {
        "orderId": {
          "type": "string",
          "description": "The user-facing sequential order ID"
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who placed the order"
        },
        "submissionId": {
          "type": "string",
          "description": "The ID of the original submission"
        },
        "imei": {
          "type": "string",
          "description": "The IMEI or serial number of the device"
        },
        "model": {
          "type": "string",
          "description": "The device model"
        },
        "price": {
          "type": "number",
          "description": "The price paid for the service"
        },
        "status": {
          "type": "string",
          "enum": ["confirming_payment", "processing", "approved", "declined", "unlocked", "ready_for_activation_bulk", "ready_for_activation"],
          "description": "The current status of the order"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["orderId", "userId", "submissionId", "imei", "model", "price", "status", "createdAt"]
    },
    "counters": {
      "title": "Counters",
      "description": "Site-wide counters for display",
      "type": "object",
      "properties": {
        "registeredUsers": {
          "type": "number",
          "description": "Total number of registered users"
        },
        "unlockedDevices": {
          "type": "number",
          "description": "Total number of unlocked devices"
        },
        "orderCounter": {
            "type": "number",
            "description": "The last used sequential order ID number"
        }
      },
      "required": ["registeredUsers", "unlockedDevices", "orderCounter"]
    },
    "banned_user": {
      "title": "Banned User",
      "description": "A user who is blocked from making new submissions",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the banned user"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date the user was banned"
        }
      },
      "required": ["userId", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/user"
      },
      "description": "User profile information"
    },
    "/submissions/{submissionId}": {
      "schema": {
        "$ref": "#/backend/entities/submission"
      },
      "description": "IMEI submissions from users"
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/backend/entities/order"
      },
      "description": "Confirmed unlock orders from users"
    },
    "/counters/metrics": {
      "schema": {
        "$ref": "#/backend/entities/counters"
      },
      "description": "Holds site-wide metrics like user and device counts"
    },
    "/banned_users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/banned_user"
      },
      "description": "List of user IDs who are banned from making new submissions"
    }
  }
}
